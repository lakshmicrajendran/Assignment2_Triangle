        [Test]
        public void Analyze_FirstInput10_SecondInput10_ThirdInput10formsEquilateralTriangle()
        {
            //Arrange
            int side1 = 10;
            int side2 = 10;
            int side3 = 10;
            String Result = TriangleSolver.Analyze(side1, side2, side3);
            String expectedOutput = Result;

            //Act
            String actualResult = "This is an Equilateral Triangle";

            //Assert
            Assert.AreEqual(expectedOutput, actualResult);
        }

        [Test]
